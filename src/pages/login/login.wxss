.login-page {
  margin: 92rpx 60rpx 0 60rpx;
  font-weight: 400;
  font-family: PingFangSC-Semibold, PingFang SC
}

.login-page .title {
  font-size: 48rpx;
  font-weight: 600;
  color: #999999;
  margin-bottom: 60rpx;
  display: inline-block
}

.login-page .input-wrap text {
  font-size: 30rpx;
  color: #666666;
  display: inline-block;
  margin: 60rpx 0 40rpx 0
}

.login-page .input-wrap input {
  border-bottom: 1px solid #E7E7E7;
  font-size: 40rpx;
  color: #333333;
  padding-bottom: 20rpx
}

.login-page .input-wrap .input-box {
  position: relative
}

.login-page .input-wrap .input-box .auth-btn {
  position: absolute;
  right: 10rpx;
  bottom: 16rpx;
  width: 180rpx;
  height: 52rpx;
  border-radius: 26rpx;
  border: 2rpx solid #00c6b8;
  font-size: 28rpx;
  color: #00C6B8;
  text-align: center;
  line-height: 52rpx;
  font-weight: bold;
  z-index: 10
}

.login-page .base-button {
  margin: 186rpx auto 0 auto;
  width: 578rpx;
  height: 96rpx;
  background: rgba(0, 198, 184, 1);
  border-radius: 200rpx;
  font-size: 30rpx;
  color: #ffffff;
  display: flex;
  justify-content: center;
  align-items: center;
}

.login-page .footer {
  position: absolute;
  bottom: 30rpx;
  left: 50%;
  transform: translateX(-50%);
  text-align: center;
  font-size: 24rpx;
  color: #ccc
}

.login-page .toast {
  margin: 100rpx auto;
  width: 388rpx;
  height: 68rpx;
  background: #111;
  border-radius: 16rpx;
  opacity: .7;
  font-size: 28rpx;
  color: #FFFFFF;
  text-align: center;
  line-height: 68rpx
}
